<% provide(:title, @piece.title) %>

<h1><%= @piece.title %></h1>

<%= link_to "Edit Piece", edit_piece_path(@piece), :class => "btn btn-default" %>
<%= link_to "Delete Piece", 
	piece_path(@piece),
	method: :delete,
	data: { confirm: "Are you sure you want to delete this piece?"},
	:class => "btn btn-default" %>

<%= link_to "Return to Library", pieces_path, :class => "btn btn-default" %>
